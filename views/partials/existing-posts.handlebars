<div class="card">
    <a href="/post/{{id}}">
        <h5 class="card-header">{{user.username}}</h5>
        <h5 class="card-header text-right">{{date}}</h5>
        <div class="card-body">
            <h5 class="card-title">{{title}}</h5>
            <p class="card-text">{{content}}</p>
        </div>
    </a>
</div>