<div class="card">  
        <h5 class="card-header">{{post.user.username}}</h5>
        <h5 class="card-header text-right">{{post.date}}</h5>
        <div class="card-body">
            <h5 class="card-title">{{post.title}}</h5>
            <p class="card-text">{{post.content}}</p>
        </div>
</div>

{{#each post.comments as |Comment|}}
<div>
    <h5 class="card-header">{{Comment.content}}</h5>
    <h5>{{Comment.publish_date}}</h5>
</div>
{{/each}}